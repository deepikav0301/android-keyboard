<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7F9FB"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#C82727"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="KEYBOARD"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="20dp"
            android:text=""
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:columnCount="10"
            android:layout_marginTop="200dp"
            android:orientation="horizontal" >

            <Button android:text="Q"
                android:textAllCaps="false"
                android:id="@+id/Qbutton1"
                android:layout_width="35dp"
                android:paddingHorizontal="4dp"
                android:layout_height="wrap_content"/>

            <Button android:text="W"
                android:id="@+id/Wbutton1"
                android:textAllCaps="false"
                android:layout_width="35dp"
                android:paddingHorizontal="4dp"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />

            <Button android:text="E"
                android:id="@+id/Ebutton1"
                android:layout_width="35dp"
                android:textAllCaps="false"
                android:paddingHorizontal="4dp"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />

            <Button android:text="R"
                android:id="@+id/Rbutton1"
                android:layout_width="35dp"
                android:textAllCaps="false"
                android:paddingHorizontal="4dp"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content"/>

            <Button android:text="T"
                android:id="@+id/TButton1"
                android:layout_width="35dp"
                android:textAllCaps="false"
                android:paddingHorizontal="4dp"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />

            <Button android:text="Y"
                android:id="@+id/Ybutton1"
                android:layout_width="35dp"
                android:textAllCaps="false"
                android:paddingHorizontal="4dp"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />

            <Button android:text="U"
                android:id="@+id/Ubutton1"
                android:layout_width="35dp"
                android:textAllCaps="false"
                android:paddingHorizontal="4dp"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />

            <Button android:text="I"
                android:id="@+id/Ibutton1"
                android:layout_width="35dp"
                android:textAllCaps="false"
                android:paddingHorizontal="4dp"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />

            <Button android:text="O"
                android:id="@+id/Obutton1"
                android:layout_width="35dp"
                android:textAllCaps="false"
                android:paddingHorizontal="4dp"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />

            <Button android:text="P"
                android:id="@+id/Pbutton1"
                android:layout_width="35dp"
                android:paddingHorizontal="4dp"
                android:textAllCaps="false"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />
       </GridLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="9dp"
            android:layout_gravity="center"
            android:columnCount="9"
            android:rowCount="1"
            android:orientation="horizontal" >
            <Button android:text="A"
                android:id="@+id/Abutton1"
                android:layout_width="35dp"
                android:paddingHorizontal="4dp"
                android:textAllCaps="false"
                android:layout_height="wrap_content" />

            <Button android:text="S"
                android:id="@+id/Sbutton1"
                android:layout_width="35dp"
                android:paddingHorizontal="4dp"
                android:textAllCaps="false"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />

            <Button android:text="D"
                android:id="@+id/Dbutton1"
                android:layout_width="35dp"
                android:paddingHorizontal="4dp"
                android:textAllCaps="false"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content"/>

            <Button android:text="F"
                android:id="@+id/Fbutton1"
                android:layout_width="35dp"
                android:paddingHorizontal="4dp"
                android:textAllCaps="false"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />

            <Button android:text="G"
                android:id="@+id/Gbutton1"
                android:layout_width="35dp"
                android:textAllCaps="false"
                android:paddingHorizontal="4dp"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />

            <Button android:text="H"
                android:id="@+id/Hbutton1"
                android:layout_width="35dp"
                android:textAllCaps="false"
                android:paddingHorizontal="4dp"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />

            <Button android:text="J"
                android:id="@+id/Jbutton1"
                android:layout_width="35dp"
                android:paddingHorizontal="4dp"
                android:textAllCaps="false"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />

            <Button android:text="K"
                android:id="@+id/Kbutton1"
                android:layout_width="35dp"
                android:paddingHorizontal="4dp"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/Lbutton1"
                android:layout_width="35dp"
                android:paddingHorizontal="4dp"
                android:textAllCaps="false"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content"
                android:text="L" />

        </GridLayout>
        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="4dp"
            android:columnCount="9"
            android:orientation="horizontal" >

            <ToggleButton
                android:id="@+id/capsButton"
                android:layout_width="34dp"
                android:background="#610EFB"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:paddingHorizontal="0dp"
                android:layout_height="36dp"/>

            <Button android:text="Z"
                android:id="@+id/Zbutton1"
                android:layout_width="35dp"
                android:textAllCaps="false"
                android:paddingHorizontal="4dp"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />

            <Button android:text="X"
                android:id="@+id/Xbutton1"
                android:layout_width="35dp"
                android:paddingHorizontal="4dp"
                android:textAllCaps="false"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />

            <Button android:text="C"
                android:id="@+id/Cbutton1"
                android:layout_width="35dp"
                android:paddingHorizontal="4dp"
                android:textAllCaps="false"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content"/>

            <Button android:text="V"
                android:id="@+id/Vbutton1"
                android:layout_width="35dp"
                android:textAllCaps="false"
                android:paddingHorizontal="4dp"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />

            <Button android:text="B"
                android:id="@+id/Bbutton1"
                android:layout_width="35dp"
                android:textAllCaps="false"
                android:paddingHorizontal="4dp"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />

            <Button android:text="N"
                android:id="@+id/Nbutton1"
                android:layout_width="35dp"
                android:paddingHorizontal="4dp"
                android:textAllCaps="false"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />

            <Button android:text="M"
                android:id="@+id/Mbutton1"
                android:layout_width="35dp"
                android:paddingHorizontal="4dp"
                android:textAllCaps="false"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />

            <Button android:drawableLeft="@android:drawable/ic_input_delete"
                android:id="@+id/deleteButton"
                android:layout_width="55dp"
                android:layout_marginLeft="2dp"
                android:paddingHorizontal="9dp"
                android:layout_height="47dp" />
        </GridLayout>
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="4dp"
            android:columnCount="10"
            android:layout_marginBottom="80dp"
            android:orientation="horizontal" >

            <ToggleButton
                android:id="@+id/numButton"
                android:layout_width="75dp"
                android:layout_height="36dp"
                android:layout_row="0"
                android:textColor="#FFFFFF"
                android:background="#610EFB"
                android:layout_column="0"
                android:text="123?" />

            <Button android:drawableLeft="@android:drawable/ic_btn_speak_now"
                android:layout_width="40dp"
                android:paddingHorizontal="5dp"
                android:layout_marginLeft="2dp"
                android:layout_height="47dp" />

            <Button android:text=","
                android:id="@+id/commaButton"
                android:textStyle="bold"
                android:layout_width="35dp"
                android:paddingHorizontal="4dp"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />

            <Button android:text="SPACE"
                android:id="@+id/spaceButton"
                android:layout_columnSpan="5"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:paddingHorizontal="4dp"
                android:layout_height="wrap_content"/>

            <Button android:text="."
                android:id="@+id/dotButton"
                android:textStyle="bold"
                android:layout_width="35dp"
                android:paddingHorizontal="4dp"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content" />

            <ImageButton android:src="@drawable/enter_key_icon"
                android:layout_width="75dp"
                android:paddingHorizontal="4dp"
                android:id="@+id/enterButton"
                android:background="#7F3AFA"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_height="37dp" />
        </GridLayout>
    </LinearLayout>
</ScrollView>